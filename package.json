{
  "name": "bebride-server",
  "version": "1.0.0",
  "description": "Backend BeBride",
  "main": "server.js",
  "author": "Miguel Duque Filho",
  "license": "MIT",
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "dev": "NODE_ENV=development nodemon src/server.js --ignore __tests__",
    "migrate": "npx sequelize db:migrate",
    "unmigrate": "npx sequelize db:migrate:undo:all",
    "seed": "npx sequelize db:seed:all",
    "unseed": "npx sequelize db:seed:undo:all",
    "pretest": "NODE_ENV=test sequelize db:migrate",
    "test": "NODE_ENV=test jest",
    "posttest": "NODE_ENV=test sequelize db:migrate:undo:all",
    "seedtest": "NODE_ENV=test yarn sequelize db:seed:all",
    "devtest": "NODE_ENV=test nodemon src/server.js --ignore __tests__",
    "pretestdb": "NODE_ENV=development sequelize db:migrate",
    "testdb": "NODE_ENV=development jest",
    "posttestdb": "NODE_ENV=development sequelize db:migrate:undo:all",
    "debug": "NODE_ENV=test node --inspect src/server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^12.0.1",
    "consign": "^0.1.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "factory-girl": "^5.0.4",
    "faker": "^4.1.0",
    "formidable": "^1.2.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.2",
    "nodemailer-express-handlebars": "^3.1.0",
    "path": "^0.12.7",
    "pm2": "^4.4.0",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "sequelize-paginate": "^1.1.6",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "jest": "^25.3.0",
    "supertest": "^4.0.2"
  }
}
